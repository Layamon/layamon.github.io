# 创建一个新的博客文件，按照 yyyy-mm-dd-title.markdown创建
mydate=$(date +%Y-%m-%d | tr -d "\n") #Assign Output of Shell command to var
blogname=$(echo -n $1)
name=$(echo -n $mydate"-"$blogname".markdown")
touch $name
# 添加jekyll的文件头
echo "---" >> $name 
echo "layout: post" >> $name 
echo "title: blogname" >> $name 
echo "date: $mydate" >> $name 
echo "categories: jekyll update" >> $name 
echo "---" >> $name 
